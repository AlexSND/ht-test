/* normalize */
@import "../../node_modules/normalize.css/normalize.css"

/* fonts */
@import "fonts.styl"

/* vars */
@import "var.styl"

/* main */
html, body
	height 100%
	width 100%

body
	-webkit-font-smoothing antialiased
	-webkit-text-size-adjust 100%
	-webkit-tap-highlight-color rgba(0,0,0,0)
	background-color #F7F7F7
	box-sizing border-box
	font-family font-regular

*, *:before, *:after
	box-sizing inherit
	transition all 0.2s

a
	text-decoration none
	-webkit-transition all 0.1s ease
	transition all 0.1s ease

input,
select,
button
	outline none
	background none
	border none

section
	display block
	position relative
	width 100%
	
ul
	list-style none
	padding 0
	margin 0
	
.page-wrapper
	display flex
	align-items flex-start
	position relative
	max-width pageWidth
	height inherit
	padding 0 15px
	margin 0 auto

/* blocks */
@import "blocks.styl"


