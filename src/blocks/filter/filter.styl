.filter
  width 300px
  margin-left 20px
  padding 30px
  flex-shrink 0
  background-color #fff
  &__show-result
    display block
    width 100%
    padding 10px 0
    background-color main-color
    color #fff
    cursor pointer
    &:hover
      background-color main-color-lighten
  &__reset
    display block
    width 100%
    margin-top 10px
    padding 10px 0
    background-color #F8F8F8
    color #000
    cursor pointer
    &:hover
      background-color #EFEFEF
  &__title
    margin-top 25px
    font-size 17px
    color #4A4A4A
  &__list
    display flex
    flex-wrap wrap
    margin-top 15px
  &__item
    margin-bottom 10px
    width 50%
    label
      display flex
  &__checkbox
    margin-right 10px

label .filter__checkbox:checked + span
  color main-color