.product
  display flex
  margin-left -10px
  margin-right -10px

  &__item
    margin-left 10px
    margin-right 10px
    padding 30px
    background-color #fff

  &__id
    display block
    text-align right
    font-size 12px
    color #BFBFBF
    &:before
      content 'Арт. '

  &__image
    width 100%
    height 200px
    margin-top 16px
    padding 20px
    text-align center
    img
      height 100%

  &__stock
    margin-top 22px
    padding-left 25px
    color #BFBFBF
    background-image url('../img/svg/stock.svg')
    background-repeat no-repeat
    background-position 0 3px
    &_active
      color #81C03D
      background-image url('../img/svg/stock_active.svg')

  &__title
    margin-top 5px
    font-size 18px
    line-height 21px

  &__info
    margin-top 25px
    font-size 12px
    font-family font-light
    li
      margin-top 10px
    &-title
      display inline-block
      color #9B9B9B
    &-description
      display inline-block
      color #4F4F4F

  &__footer
    margin-top 60px
    display flex
    justify-content space-between
    align-items center

  &__buy
    display inline-block
    position relative
    padding 10px 15px 10px 40px
    color #fff
    background-color main-color
    border none
    cursor pointer
    &:before
      content ''
      display block
      position absolute
      left 10px
      width 20px
      height 20px
      background-image url('../img/svg/cart.svg')
      background-repeat no-repeat
    &:hover
      background-color main-color-lighten

  &__favorite
    display inline-block
    width 20px
    height 20px
    margin-right 10px
    border none
    background-image url('../img/svg/favorite.svg')
    background-repeat no-repeat
    background-position center
    cursor pointer
    &_active
      background-image url('../img/svg/favorite_active.svg')

  &__compare
    display inline-block
    width 20px
    height 20px
    border none
    background-image url('../img/svg/compare.svg')
    background-repeat no-repeat
    background-position center
    cursor pointer